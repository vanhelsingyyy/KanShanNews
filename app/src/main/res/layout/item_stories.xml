<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/basic9dp"
    android:layout_marginLeft="@dimen/basic11dp"
    android:layout_marginRight="@dimen/basic11dp"
    android:background="@drawable/bg_card"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/basic16dp">

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="中国古代家具发展到今天有两个高峰，一个两宋一个明末"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/basic17sp" />

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="@dimen/basic83dp"
            android:layout_height="@dimen/basic73dp"
            android:layout_marginLeft="@dimen/basic6dp"
            android:scaleType="fitXY" />
    </LinearLayout>
</LinearLayout>



